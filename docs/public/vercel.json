{
    "redirects": [
        {
            "source": "/:path",
            "destination": "/zh/:path"
        },
        {
            "source": "/:path",
            "destination": "/zh/:path",
            "permanent": false,
            "has": {
                "type": "cookie",
                "key": "lang",
                "value": "zh"
            }
        },
        {
            "source": "/:path",
            "destination": "/en/:path",
            "permanent": false,
            "has": {
                "type": "cookie",
                "key": "lang",
                "value": "en"
            }
        }
    ]
}